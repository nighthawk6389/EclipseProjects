<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    <TextView
	    android:text="Ask"
	    android:textSize="15pt"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"/>
	
    <CheckBox android:id="@+id/drink"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/drink" />
    
    <CheckBox android:id="@+id/vomit"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/vomit" />
    
    <CheckBox android:id="@+id/convulse"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/convulse" />
    
    <TextView
	    android:text="Look"
	    android:textSize="15pt"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"/>
	    
	<CheckBox android:id="@+id/unconscious"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/unconscious" />
    
    <CheckBox android:id="@+id/convulsing"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/convulsing" />
	
    	<Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:text="Next" />
    
</LinearLayout>